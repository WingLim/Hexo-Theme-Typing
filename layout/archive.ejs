    <div class="post-back">
        <a href="/"><-- home</a>
    </div>
    <main>
        <article class="post">
            <header>
                <% 
                    var pagetitle = '';
                    if (is_tag()){
                        pagetitle = 'Tag: ' + page.tag;
                    }
                    if (is_archive()){
                        pagetitle = 'Archives';
                    }
                    if (is_category()){
                        pagetitle = 'Category: ' + page.category;
                    }
                %>
                <h1><%= pagetitle %></h1>
            </header>
            <ul class="archive">
                <% page.posts.each(function(post){ %>
                <li>
                    <span class="date"><%= date(post.date, "YYYY MMM DD") %></span>
                    <a href="<%- url_for(post.path) %>"><%= post.title %></a>
                </li>
                <% }) %>
            </ul>
        </article>
    </main>
<div class="post-back">
    <a href="/"><-- home</a>
</div>
<main>
    <article class="post">
        <header>
            <h1><%= page.title %></h1>
            <% if(is_post()){ %>
            <div class="meta">
                <time class="timeago" datetime="<%= page.date.format("YYYY-MM-DD hh:mm:ss") %>"><%= page.date.format("MMMM DD, YYYY") %></time>
                <span class="middotDivider"></span>
                <% if (page.tags && page.tags.length){ %>
                    <div class="tags">
                    <% (page._tags || page.tags).forEach(tag => { %>
                        <span><a class="tag" href="<%- url_for(tag.path) %>">#<%= tag.name %></a></span>
                    <% }) %>
                    </div>
                <% } %>
            </div>
            <% } %>
        </header>
        <section>
            <%- page.content %>
        </section>
    </article>
    <% if (is_post()){ %>
        <% if(theme.comment.enable && theme.comment.type){ %>
        <div class="comments">
            <%- partial('comment/' + theme.comment.type, {comment: theme.comment}) %>
        </div>
        <% } %>
    <% } %>
</main>
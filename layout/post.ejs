<div class="post-back">
    <a href="/"><-- home</a>
</div>
<main>
    <article class="post">
        <header>
            <h1><%= page.title %></h1>
            <div class="post-letter"><%= page.title.charAt(0) %></div>
            <div class="meta">
                <span class="date"><%= date(page.date, "MMMM DD YYYY") %></span>
                <div class="tags">
                    <% if (page.tags && page.tags.length){ %>
                        <% (page._tags || page.tags).forEach(tag => { %>
                            <span><a class="tag" href="<%- url_for(tag.path) %>">#<%= tag.name %></a></span>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </header>
        <section>
            <%- page.content %>
        </section>
    </article>
</main>
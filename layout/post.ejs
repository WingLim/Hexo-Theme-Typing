<div class="post-back">
    <a href="/"><-- home</a>
</div>
<main>
    <article class="post">
        <header>
            <h1><%= page.title %></h1>
            <div class="cat"><% page.categories.forEach(cat => { %><%= cat.name %><% }) %></div>
            <div class="meta">
                <span class="date"><%= date(page.date, "MMMM DD YYYY") %></span>
                <% if (page.tags && page.tags.length){ %>
                    <div class="tags">
                    <% (page._tags || page.tags).forEach(tag => { %>
                        <span><a class="tag" href="<%- url_for(tag.path) %>">#<%= tag.name %></a></span>
                    <% }) %>
                    </div>
                <% } %>
            </div>
        </header>
        <section>
            <%- page.content %>
        </section>
    </article>
</main>